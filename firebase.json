{
  "hosting": {
    "public": "build",
    "ignore": [
      "**/.*",
      "./__tests__/**",
      "./app/**",
      "./gulp/**",
      "**/node_modules/**",
      "./unused/**",
      "firebase.json"
    ],
    "rewrites": [
      {
        "source": "/docs/articles/404",
        "destination": "/docs-articles-404.html"
      },
      {
        "source": "/docs/articles/blockstack-core",
        "destination": "/docs-articles-blockstack-core.html"
      },
      {
        "source": "/docs/articles/browser-alpha",
        "destination": "/docs-articles-browser-alpha.html"
      },
      {
        "source": "/docs/articles/faq",
        "destination": "/docs-articles-faq.html"
      },
      {
        "source": "/docs/articles/light-clients",
        "destination": "/docs-articles-light-clients.html"
      },
      {
        "source": "/docs/tutorials/hello-world",
        "destination": "/docs-tutorials-hello-world.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/docs/blockchain-identity",
        "destination": "/posts/blockchain-identity",
        "type": 301
      },
      {
        "source": "/docs/blockchain-id",
        "destination": "/posts/blockchain-identity",
        "type": 301
      },
      {
        "source": "/docs/what-is-blockstack",
        "destination": "/posts/blockstack-core",
        "type": 301
      },
      {
        "source": "/articles",
        "destination": "/posts",
        "type": 301
      },
      {
        "source": "/articles/browser-beta",
        "destination": "/browser",
        "type": 301
      },
      {
        "source": "/docs/installation",
        "destination": "/docs",
        "type": 301
      }
    ]
  }
}